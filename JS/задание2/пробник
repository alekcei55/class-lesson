// –ü–æ–ª—É—á–∞–µ–º —É—Ä–æ–≤–µ–Ω—å –∑–¥–æ—Ä–æ–≤—å—è –æ—Ç –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è
let health = parseInt(prompt('–í–≤–µ–¥–∏—Ç–µ –∫–æ–ª–∏—á–µ—Å—Ç–≤–æ –∑–¥–æ—Ä–æ–≤—å—è –ø–µ—Ä—Å–æ–Ω–∞–∂–∞'));

// –£—Å–ª–æ–≤–∏–µ –Ω–∞ —Å–º–µ—Ä—Ç—å –ø–µ—Ä—Å–æ–Ω–∞–∂–∞
if (health === 0) { // –ü—Ä–æ–≤–µ—Ä—è–µ–º —Ç–æ—á–Ω–æ–µ —Ä–∞–≤–µ–Ω—Å—Ç–≤–æ —É—Ä–æ–≤–Ω—é –∑–¥–æ—Ä–æ–≤—å—è —Ä–∞–≤–Ω–æ–º—É –Ω—É–ª—é
    console.log('–ü–µ—Ä—Å–æ–Ω–∞–∂ –º–µ—Ä—Ç–≤ üíÄ');
}
// –ü–µ—Ä—Å–æ–Ω–∞–∂ —Ç—è–∂–µ–ª–æ —Ä–∞–Ω–µ–Ω, –µ—Å–ª–∏ –∑–¥–æ—Ä–æ–≤—å–µ –Ω–∏–∂–µ 20 –µ–¥–∏–Ω–∏—Ü
else if (health < 20) {
    console.log('–ü–µ—Ä—Å–æ–Ω–∞–∂ —Ç—è–∂–µ–ª–æ —Ä–∞–Ω–µ–Ω üöë');
}
// –ó–¥–æ—Ä–æ–≤—å–µ –º–µ–∂–¥—É 20 –∏ 70 –µ–¥–∏–Ω–∏—Ü–∞–º–∏ –æ–∑–Ω–∞—á–∞–µ—Ç —Ä–∞–Ω–µ–Ω–∏–µ
else if (health >= 20 && health <= 70) {
    console.log('–ü–µ—Ä—Å–æ–Ω–∞–∂ —Ä–∞–Ω–µ–Ω ü§ï');
}
// –í–æ –≤—Å–µ—Ö –æ—Å—Ç–∞–ª—å–Ω—ã—Ö —Å–ª—É—á–∞—è—Ö (–µ—Å–ª–∏ –∑–¥–æ—Ä–æ–≤—å–µ –±–æ–ª—å—à–µ 70)
else {
    console.log('–ü–µ—Ä—Å–æ–Ω–∞–∂ –≤ —Ö–æ—Ä–æ—à–µ–π —Ñ–æ—Ä–º–µ üí™');
}

// –ó–∞–ø—Ä–∞—à–∏–≤–∞–µ–º —É –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è —É—Ä–æ–≤–Ω–∏ —Å–∏–ª—ã –∑–∞–∫–ª–∏–Ω–∞–Ω–∏–π
let fireballPower = parseInt(prompt('–í–≤–µ–¥–∏—Ç–µ —Å–∏–ª—É –æ–≥–Ω–µ–Ω–Ω–æ–≥–æ —à–∞—Ä–∞'));
let healingPower = parseInt(prompt('–í–≤–µ–¥–∏—Ç–µ —Å–∏–ª—É –∏—Å—Ü–µ–ª–µ–Ω–∏—è'));
let invisibilityPower = parseInt(prompt('–í–≤–µ–¥–∏—Ç–µ —Å–∏–ª—É –Ω–µ–≤–∏–¥–∏–º–æ—Å—Ç–∏'));

// –û–ø—Ä–µ–¥–µ–ª—è–µ–º –±–∞–∑–æ–≤—ã–µ –ø—Ä–∞–≤–∏–ª–∞ –¥–ª—è –ø—Ä–æ–≤–µ—Ä–æ–∫
const baseInvisibilityPower = 50; // –ü—Ä–µ–¥–ø–æ–ª–æ–∂–∏–º, —á—Ç–æ –±–∞–∑–æ–≤–∞—è —Å–∏–ª–∞ –Ω–µ–≤–∏–¥–∏–º–æ—Å—Ç–∏ —Ä–∞–≤–Ω–∞ 50

// –ü—Ä–æ–≤–µ—Ä–∫–∞ —É—Å–ª–æ–≤–∏–π –ø–æ –∫–∞–∂–¥–æ–º—É —Ç–∏–ø—É –º–∞–≥–∏–∏
if (fireballPower > 100) { // –û–≥–Ω–µ–Ω–Ω—ã–π —à–∞—Ä —Å–ª–∏—à–∫–æ–º —Å–∏–ª—å–Ω—ã–π?
    console.log('–û–≥–Ω–µ–Ω–Ω—ã–π —à–∞—Ä —Å–ª–∏—à–∫–æ–º –º–æ—â–Ω—ã–π! üî•');
} else if (healingPower < 50) { // –ò—Å—Ü–µ–ª–µ–Ω–∏–µ –Ω–µ–¥–æ—Å—Ç–∞—Ç–æ—á–Ω–æ —Å–∏–ª—å–Ω–æ–µ?
    console.log('–ò—Å—Ü–µ–ª–µ–Ω–∏–µ —Å–ª–∏—à–∫–æ–º —Å–ª–∞–±–æ–µ! üíî');
} else if (invisibilityPower === baseInvisibilityPower) { // –ù–µ–≤–∏–¥–∏–º–æ—Å—Ç—å —Å–æ–æ—Ç–≤–µ—Ç—Å—Ç–≤—É–µ—Ç –±–∞–∑–æ–≤–æ–π —Å–∏–ª–µ?
    console.log('–ù–µ–≤–∏–¥–∏–º–æ—Å—Ç—å –Ω–∞ –±–∞–∑–æ–≤–æ–º —É—Ä–æ–≤–Ω–µ üëª');
} else { // –í—Å–µ –æ—Å—Ç–∞–ª—å–Ω—ã–µ —Å–ª—É—á–∞–∏
    console.log('–í—Å–µ –∑–∞–∫–ª–∏–Ω–∞–Ω–∏—è —Å–±–∞–ª–∞–Ω—Å–∏—Ä–æ–≤–∞–Ω—ã ‚öñÔ∏è');
}

// –ü–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å –≤–≤–æ–¥–∏—Ç —Å—Ç–∞—Ç—É—Å –≥–µ—Ä–æ—è ("hero"/"villain")
let heroStatus = prompt('–í—ã–±–µ—Ä–∏—Ç–µ —Å—Ç–∞—Ç—É—Å –ø–µ—Ä—Å–æ–Ω–∞–∂–∞ (hero/villain)');

// –ü—Ä–æ–≤–µ—Ä–∫–∞ —Å—Ç–∞—Ç—É—Å–∞
if (heroStatus.toLowerCase() === 'hero') { // –ü—Ä–µ–æ–±—Ä–∞–∑—É–µ–º —Å—Ç—Ä–æ–∫—É –≤ –Ω–∏–∂–Ω–∏–π —Ä–µ–≥–∏—Å—Ç—Ä –ø–µ—Ä–µ–¥ —Å—Ä–∞–≤–Ω–µ–Ω–∏–µ–º
    console.log('–¢—ã –Ω–∞ —Å—Ç–æ—Ä–æ–Ω–µ —Å–≤–µ—Ç–∞! ‚ú®');
} else if (heroStatus.toLowerCase() === 'villain') {
    console.log('–¢—ã –Ω–∞ —Å—Ç–æ—Ä–æ–Ω–µ —Ç—å–º—ã! üåë');
} else { // –ù–µ –æ–ø—Ä–µ–¥–µ–ª—ë–Ω–Ω—ã–π —Å—Ç–∞—Ç—É—Å
    console.log('–ù–µ–æ–ø—Ä–µ–¥–µ–ª–µ–Ω–Ω—ã–π —Å—Ç–∞—Ç—É—Å –ø–µ—Ä—Å–æ–Ω–∞–∂–∞ ü§î');
}

// –ì–µ–Ω–µ—Ä–∏—Ä—É–µ–º —Å–ª—É—á–∞–π–Ω–æ–µ –∑–Ω–∞—á–µ–Ω–∏–µ –±—Ä–æ—Å–∫–∞ –∫—É–±–∏–∫–∞
let diceRoll = Math.floor(Math.random() * 20 + 1); // –ö—É–±–∏–∫ –±—Ä–æ—Å–∏—Ç—Å—è —Å–ª—É—á–∞–π–Ω–æ–µ —á–∏—Å–ª–æ –æ—Ç 1 –¥–æ 20

// –ò—Å–ø–æ–ª—å–∑—É–µ–º –æ–ø–µ—Ä–∞—Ç–æ—Ä switch –¥–ª—è –æ–±—Ä–∞–±–æ—Ç–∫–∏ –æ—Å–æ–±—ã—Ö —Ä–µ–∑—É–ª—å—Ç–∞—Ç–æ–≤
switch (diceRoll) {
    case 1: // –ü–æ–ª–Ω—ã–π –ø—Ä–æ–≤–∞–ª!
        console.log('–ü–æ–ª–Ω—ã–π –ø—Ä–æ–≤–∞–ª! ‚ùå');
        break;
    case 7: // –û—Å–æ–±–µ–Ω–Ω–æ–µ —Å—á–∞—Å—Ç–ª–∏–≤–æ–µ —á–∏—Å–ª–æ
        console.log('–°—á–∞—Å—Ç–ª–∏–≤–æ–µ —á–∏—Å–ª–æ! üçÄ');
        break;
    case 13: // –ù–µ—Å—á–∞—Å—Ç–ª–∏–≤–æ–µ —á–∏—Å–ª–æ
        console.log('–ù–µ—Å—á–∞—Å—Ç–ª–∏–≤–æ–µ —á–∏—Å–ª–æ! ü¶á');
        break;
    case 20: // –ê–±—Å–æ–ª—é—Ç–Ω—ã–π —É—Å–ø–µ—Ö!
        console.log('–ê–±—Å–æ–ª—é—Ç–Ω—ã–π —É—Å–ø–µ—Ö! ‚úÖ');
        break;
    default: // –û–±—ã—á–Ω—ã–µ —Ä–µ–∑—É–ª—å—Ç–∞—Ç—ã –±—Ä–æ—Å–∫–æ–≤
        console.log('–û–±—ã—á–Ω—ã–π —Ä–µ–∑—É–ª—å—Ç–∞—Ç');
}

// –ó–∞–ø—Ä–∞—à–∏–≤–∞–µ–º –Ω–∞–∑–≤–∞–Ω–∏–µ –ø—Ä–µ–¥–º–µ—Ç–∞
let questItem = prompt('–í–≤–µ–¥–∏—Ç–µ –Ω–∞–∑–≤–∞–Ω–∏–µ –ø—Ä–µ–¥–º–µ—Ç–∞ –¥–ª—è –∫–≤–µ—Å—Ç–∞');

// –û–ø—Ä–µ–¥–µ–ª–∏–º –∫–≤–µ—Å—Ç –≤ –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–∏ –æ—Ç —Ç–∏–ø–∞ –ø—Ä–µ–¥–º–µ—Ç–∞
switch (true) {
    case questItem.includes('–∞—Ä—Ç–µ—Ñ–∞–∫—Ç'): // –≠–ø–∏—á–µ—Å–∫–∏–π –∫–≤–µ—Å—Ç
        console.log('–≠–ø–∏—á–µ—Å–∫–∏–π –∫–≤–µ—Å—Ç! üèÜ');
        break;
    case questItem.includes('–∫–æ–ª—å—Ü–æ'): // –ö–≤–µ—Å—Ç –º–∞–≥–∏—á–µ—Å–∫–æ–≥–æ –∫–æ–ª—å—Ü–∞
        console.log('–ö–≤–µ—Å—Ç –º–∞–≥–∏—á–µ—Å–∫–æ–≥–æ –∫–æ–ª—å—Ü–∞! üíç');
        break;
    case questItem.includes('–º–µ—á'): // –ö–≤–µ—Å—Ç –ª–µ–≥–µ–Ω–¥–∞—Ä–Ω–æ–≥–æ –º–µ—á–∞
        console.log('–ö–≤–µ—Å—Ç –ª–µ–≥–µ–Ω–¥–∞—Ä–Ω–æ–≥–æ –º–µ—á–∞! ‚öîÔ∏è');
        break;
    default: // –û–±—ã—á–Ω—ã–π –∫–≤–µ—Å—Ç
        console.log('–û–±—ã—á–Ω—ã–π –∫–≤–µ—Å—Ç üìú');
}

// –¢–∏–ø –∑–∞–∫–ª–∏–Ω–∞–Ω–∏—è –≤–≤–æ–¥–∏—Ç—Å—è –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª–µ–º
let spellType = prompt('–í–≤–µ–¥–∏—Ç–µ —Ç–∏–ø –∑–∞–∫–ª–∏–Ω–∞–Ω–∏—è (fire, heal, invisibility, ice)');

// –û–±—Ä–∞–±–∞—Ç—ã–≤–∞–µ–º —Ç–∏–ø—ã –∑–∞–∫–ª–∏–Ω–∞–Ω–∏–π
switch (spellType) {
    case 'fire': // –ó–∞–∫–ª–∏–Ω–∞–Ω–∏–µ –æ–≥–Ω—è
        console.log('–ù–∞–Ω–æ—Å–∏—Ç –æ–≥–Ω–µ–Ω–Ω—ã–π —É—Ä–æ–Ω üî•');
        break;
    case 'heal': // –ú–∞–≥–∏—è –∏—Å—Ü–µ–ª–µ–Ω–∏—è
        console.log('–í–æ—Å—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ—Ç –∑–¥–æ—Ä–æ–≤—å–µ üíö');
        break;
    case 'invisibility': // –°–∫—Ä—ã—Ç–∏–µ –æ—Ç –ø—Ä–æ—Ç–∏–≤–Ω–∏–∫–∞
        console.log('–î–∞–µ—Ç –Ω–µ–≤–∏–¥–∏–º–æ—Å—Ç—å ü´•');
        break;
    case 'ice': // –ó–∞–º–µ–¥–ª–µ–Ω–∏–µ –ø—Ä–æ—Ç–∏–≤–Ω–∏–∫–æ–≤
        console.log('–ó–∞–º–µ–¥–ª—è–µ—Ç –≤—Ä–∞–≥–æ–≤ ‚ùÑÔ∏è');
        break;
    default: // –õ—é–±—ã–µ –Ω–µ–∏–∑–≤–µ—Å—Ç–Ω—ã–µ –∑–∞–∫–ª–∏–Ω–∞–Ω–∏—è
        console.log('–ù–µ–∏–∑–≤–µ—Å—Ç–Ω–æ–µ –∑–∞–∫–ª–∏–Ω–∞–Ω–∏–µ ‚ùì');
}

































let health = Number ('–í–≤–µ–¥–∏—Ç–µ –∫–æ–ª–∏—á–µ—Å—Ç–≤–æ –∑–¥–æ—Ä–æ–≤—å—è –ø–µ—Ä—Å–æ–Ω–∞–∂–∞');

// –£—Å–ª–æ–≤–∏–µ –Ω–∞ —Å–º–µ—Ä—Ç—å –ø–µ—Ä—Å–æ–Ω–∞–∂–∞
if (health === 0) { // –ü—Ä–æ–≤–µ—Ä—è–µ–º —Ç–æ—á–Ω–æ–µ —Ä–∞–≤–µ–Ω—Å—Ç–≤–æ —É—Ä–æ–≤–Ω—é –∑–¥–æ—Ä–æ–≤—å—è —Ä–∞–≤–Ω–æ–º—É –Ω—É–ª—é
    console.log('–ü–µ—Ä—Å–æ–Ω–∞–∂ –º–µ—Ä—Ç–≤ üíÄ');
}
// –ü–µ—Ä—Å–æ–Ω–∞–∂ —Ç—è–∂–µ–ª–æ —Ä–∞–Ω–µ–Ω, –µ—Å–ª–∏ –∑–¥–æ—Ä–æ–≤—å–µ –Ω–∏–∂–µ 20 –µ–¥–∏–Ω–∏—Ü
else if (health < 20) {
    console.log('–ü–µ—Ä—Å–æ–Ω–∞–∂ —Ç—è–∂–µ–ª–æ —Ä–∞–Ω–µ–Ω üöë');
}
// –ó–¥–æ—Ä–æ–≤—å–µ –º–µ–∂–¥—É 20 –∏ 70 –µ–¥–∏–Ω–∏—Ü–∞–º–∏ –æ–∑–Ω–∞—á–∞–µ—Ç —Ä–∞–Ω–µ–Ω–∏–µ
else if (health >= 20 && health <= 70) {
    console.log('–ü–µ—Ä—Å–æ–Ω–∞–∂ —Ä–∞–Ω–µ–Ω ü§ï');
}
// –í–æ –≤—Å–µ—Ö –æ—Å—Ç–∞–ª—å–Ω—ã—Ö —Å–ª—É—á–∞—è—Ö (–µ—Å–ª–∏ –∑–¥–æ—Ä–æ–≤—å–µ –±–æ–ª—å—à–µ 70)
else {
    console.log('–ü–µ—Ä—Å–æ–Ω–∞–∂ –≤ —Ö–æ—Ä–æ—à–µ–π —Ñ–æ—Ä–º–µ üí™');
}


// –ó–∞–ø—Ä–∞—à–∏–≤–∞–µ–º —É –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è —É—Ä–æ–≤–Ω–∏ —Å–∏–ª—ã –∑–∞–∫–ª–∏–Ω–∞–Ω–∏–π
let fireballPower =Number('–í–≤–µ–¥–∏—Ç–µ —Å–∏–ª—É –æ–≥–Ω–µ–Ω–Ω–æ–≥–æ —à–∞—Ä–∞');
let healingPower = Number('–í–≤–µ–¥–∏—Ç–µ —Å–∏–ª—É –∏—Å—Ü–µ–ª–µ–Ω–∏—è');
let invisibilityPower =Number('–í–≤–µ–¥–∏—Ç–µ —Å–∏–ª—É –Ω–µ–≤–∏–¥–∏–º–æ—Å—Ç–∏');

// –û–ø—Ä–µ–¥–µ–ª—è–µ–º –±–∞–∑–æ–≤—ã–µ –ø—Ä–∞–≤–∏–ª–∞ –¥–ª—è –ø—Ä–æ–≤–µ—Ä–æ–∫
const baseInvisibilityPower = 50; // –ü—Ä–µ–¥–ø–æ–ª–æ–∂–∏–º, —á—Ç–æ –±–∞–∑–æ–≤–∞—è —Å–∏–ª–∞ –Ω–µ–≤–∏–¥–∏–º–æ—Å—Ç–∏ —Ä–∞–≤–Ω–∞ 50

// –ü—Ä–æ–≤–µ—Ä–∫–∞ —É—Å–ª–æ–≤–∏–π –ø–æ –∫–∞–∂–¥–æ–º—É —Ç–∏–ø—É –º–∞–≥–∏–∏
if (fireballPower > 100) { // –û–≥–Ω–µ–Ω–Ω—ã–π —à–∞—Ä —Å–ª–∏—à–∫–æ–º —Å–∏–ª—å–Ω—ã–π?
    console.log('–û–≥–Ω–µ–Ω–Ω—ã–π —à–∞—Ä —Å–ª–∏—à–∫–æ–º –º–æ—â–Ω—ã–π! üî•');
} else if (healingPower < 50) { // –ò—Å—Ü–µ–ª–µ–Ω–∏–µ –Ω–µ–¥–æ—Å—Ç–∞—Ç–æ—á–Ω–æ —Å–∏–ª—å–Ω–æ–µ?
    console.log('–ò—Å—Ü–µ–ª–µ–Ω–∏–µ —Å–ª–∏—à–∫–æ–º —Å–ª–∞–±–æ–µ! üíî');
} else if (invisibilityPower === baseInvisibilityPower) { // –ù–µ–≤–∏–¥–∏–º–æ—Å—Ç—å —Å–æ–æ—Ç–≤–µ—Ç—Å—Ç–≤—É–µ—Ç –±–∞–∑–æ–≤–æ–π —Å–∏–ª–µ?
    console.log('–ù–µ–≤–∏–¥–∏–º–æ—Å—Ç—å –Ω–∞ –±–∞–∑–æ–≤–æ–º —É—Ä–æ–≤–Ω–µ üëª');
} else { // –í—Å–µ –æ—Å—Ç–∞–ª—å–Ω—ã–µ —Å–ª—É—á–∞–∏
    console.log('–í—Å–µ –∑–∞–∫–ª–∏–Ω–∞–Ω–∏—è —Å–±–∞–ª–∞–Ω—Å–∏—Ä–æ–≤–∞–Ω—ã ‚öñÔ∏è');
}

// –ü–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å –≤–≤–æ–¥–∏—Ç —Å—Ç–∞—Ç—É—Å –≥–µ—Ä–æ—è ("hero"/"villain")
let heroStatus = prompt('–í—ã–±–µ—Ä–∏—Ç–µ —Å—Ç–∞—Ç—É—Å –ø–µ—Ä—Å–æ–Ω–∞–∂–∞ (hero/villain)');

// –ü—Ä–æ–≤–µ—Ä–∫–∞ —Å—Ç–∞—Ç—É—Å–∞
if (heroStatus.toLowerCase() === 'hero') { // –ü—Ä–µ–æ–±—Ä–∞–∑—É–µ–º —Å—Ç—Ä–æ–∫—É –≤ –Ω–∏–∂–Ω–∏–π —Ä–µ–≥–∏—Å—Ç—Ä –ø–µ—Ä–µ–¥ —Å—Ä–∞–≤–Ω–µ–Ω–∏–µ–º
    console.log('–¢—ã –Ω–∞ —Å—Ç–æ—Ä–æ–Ω–µ —Å–≤–µ—Ç–∞! ‚ú®');
} else if (heroStatus.toLowerCase() === 'villain') {
    console.log('–¢—ã –Ω–∞ —Å—Ç–æ—Ä–æ–Ω–µ —Ç—å–º—ã! üåë');
} else { // –ù–µ –æ–ø—Ä–µ–¥–µ–ª—ë–Ω–Ω—ã–π —Å—Ç–∞—Ç—É—Å
    console.log('–ù–µ–æ–ø—Ä–µ–¥–µ–ª–µ–Ω–Ω—ã–π —Å—Ç–∞—Ç—É—Å –ø–µ—Ä—Å–æ–Ω–∞–∂–∞ ü§î');
}

// –ü–æ–ª—É—á–∞–µ–º –∑–Ω–∞—á–µ–Ω–∏–µ –±—Ä–æ—Å–∫–∞ –∫—É–±–∏–∫–∞
let diceRoll = parseInt(prompt('–í–≤–µ–¥–∏—Ç–µ —Ä–µ–∑—É–ª—å—Ç–∞—Ç –±—Ä–æ—Å–∫–∞ –∫—É–±–∏–∫–∞'));

// –ò—Å–ø–æ–ª—å–∑—É–µ–º –æ–ø–µ—Ä–∞—Ç–æ—Ä switch –¥–ª—è –æ–±—Ä–∞–±–æ—Ç–∫–∏ –æ—Å–æ–±—ã—Ö —Ä–µ–∑—É–ª—å—Ç–∞—Ç–æ–≤
switch (diceRoll) {
    case 1: // –ü–æ–ª–Ω—ã–π –ø—Ä–æ–≤–∞–ª!
        console.log('–ü–æ–ª–Ω—ã–π –ø—Ä–æ–≤–∞–ª! ‚ùå');
        break;
    case 7: // –û—Å–æ–±–µ–Ω–Ω–æ–µ —Å—á–∞—Å—Ç–ª–∏–≤–æ–µ —á–∏—Å–ª–æ
        console.log('–°—á–∞—Å—Ç–ª–∏–≤–æ–µ —á–∏—Å–ª–æ! üçÄ');
        break;
    case 13: // –ù–µ—Å—á–∞—Å—Ç–ª–∏–≤–æ–µ —á–∏—Å–ª–æ
        console.log('–ù–µ—Å—á–∞—Å—Ç–ª–∏–≤–æ–µ —á–∏—Å–ª–æ! ü¶á');
        break;
    case 20: // –ê–±—Å–æ–ª—é—Ç–Ω—ã–π —É—Å–ø–µ—Ö!
        console.log('–ê–±—Å–æ–ª—é—Ç–Ω—ã–π —É—Å–ø–µ—Ö! ‚úÖ');
        break;
    default: // –û–±—ã—á–Ω—ã–µ —Ä–µ–∑—É–ª—å—Ç–∞—Ç—ã –±—Ä–æ—Å–∫–æ–≤
        console.log('–û–±—ã—á–Ω—ã–π —Ä–µ–∑—É–ª—å—Ç–∞—Ç');
}

// –ó–∞–ø—Ä–∞—à–∏–≤–∞–µ–º –Ω–∞–∑–≤–∞–Ω–∏–µ –ø—Ä–µ–¥–º–µ—Ç–∞
let questItem = prompt('–í–≤–µ–¥–∏—Ç–µ –Ω–∞–∑–≤–∞–Ω–∏–µ –ø—Ä–µ–¥–º–µ—Ç–∞ –¥–ª—è –∫–≤–µ—Å—Ç–∞');

// –û–ø—Ä–µ–¥–µ–ª–∏–º –∫–≤–µ—Å—Ç –≤ –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–∏ –æ—Ç —Ç–∏–ø–∞ –ø—Ä–µ–¥–º–µ—Ç–∞
switch (true) {
    case questItem.includes('–∞—Ä—Ç–µ—Ñ–∞–∫—Ç'): // –≠–ø–∏—á–µ—Å–∫–∏–π –∫–≤–µ—Å—Ç
        console.log('–≠–ø–∏—á–µ—Å–∫–∏–π –∫–≤–µ—Å—Ç! üèÜ');
        break;
    case questItem.includes('–∫–æ–ª—å—Ü–æ'): // –ö–≤–µ—Å—Ç –º–∞–≥–∏—á–µ—Å–∫–æ–≥–æ –∫–æ–ª—å—Ü–∞
        console.log('–ö–≤–µ—Å—Ç –º–∞–≥–∏—á–µ—Å–∫–æ–≥–æ –∫–æ–ª—å—Ü–∞! üíç');
        break;
    case questItem.includes('–º–µ—á'): // –ö–≤–µ—Å—Ç –ª–µ–≥–µ–Ω–¥–∞—Ä–Ω–æ–≥–æ –º–µ—á–∞
        console.log('–ö–≤–µ—Å—Ç –ª–µ–≥–µ–Ω–¥–∞—Ä–Ω–æ–≥–æ –º–µ—á–∞! ‚öîÔ∏è');
        break;
    default: // –û–±—ã—á–Ω—ã–π –∫–≤–µ—Å—Ç
        console.log('–û–±—ã—á–Ω—ã–π –∫–≤–µ—Å—Ç üìú');
}

// –¢–∏–ø –∑–∞–∫–ª–∏–Ω–∞–Ω–∏—è –≤–≤–æ–¥–∏—Ç—Å—è –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª–µ–º
let spellType = prompt('–í–≤–µ–¥–∏—Ç–µ —Ç–∏–ø –∑–∞–∫–ª–∏–Ω–∞–Ω–∏—è (fire, heal, invisibility, ice)');

// –û–±—Ä–∞–±–∞—Ç—ã–≤–∞–µ–º —Ç–∏–ø—ã –∑–∞–∫–ª–∏–Ω–∞–Ω–∏–π
switch (spellType) {
    case 'fire': // –ó–∞–∫–ª–∏–Ω–∞–Ω–∏–µ –æ–≥–Ω—è
        console.log('–ù–∞–Ω–æ—Å–∏—Ç –æ–≥–Ω–µ–Ω–Ω—ã–π —É—Ä–æ–Ω üî•');
        break;
    case 'heal': // –ú–∞–≥–∏—è –∏—Å—Ü–µ–ª–µ–Ω–∏—è
        console.log('–í–æ—Å—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ—Ç –∑–¥–æ—Ä–æ–≤—å–µ üíö');
        break;
    case 'invisibility': // –°–∫—Ä—ã—Ç–∏–µ –æ—Ç –ø—Ä–æ—Ç–∏–≤–Ω–∏–∫–∞
        console.log('–î–∞–µ—Ç –Ω–µ–≤–∏–¥–∏–º–æ—Å—Ç—å ü´•');
        break;
    case 'ice': // –ó–∞–º–µ–¥–ª–µ–Ω–∏–µ –ø—Ä–æ—Ç–∏–≤–Ω–∏–∫–æ–≤
        console.log('–ó–∞–º–µ–¥–ª—è–µ—Ç –≤—Ä–∞–≥–æ–≤ ‚ùÑÔ∏è');
        break;
    default: // –õ—é–±—ã–µ –Ω–µ–∏–∑–≤–µ—Å—Ç–Ω—ã–µ –∑–∞–∫–ª–∏–Ω–∞–Ω–∏—è
        console.log('–ù–µ–∏–∑–≤–µ—Å—Ç–Ω–æ–µ –∑–∞–∫–ª–∏–Ω–∞–Ω–∏–µ ‚ùì');
}
